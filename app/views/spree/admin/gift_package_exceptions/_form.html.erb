  <div class="field">
    <%= f.label :gift_package %>
    <%= f.collection_select :gift_package_id, Spree::GiftPackage.all, :id, :title %> <span class="required">*</span>
  </div>

 
  <div class="actions">
    <%= f.submit %>
  </div>
